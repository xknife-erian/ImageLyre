<Window x:Class="ImageLaka.Views.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageLaka.Views"
        xmlns:viewModels="clr-namespace:ImageLaka.ViewModels;assembly=ImageLaka.ViewModels"
        mc:Ignorable="d"
        Title="ImageWindow" Height="400" Width="400"
        d:DataContext="{d:DesignInstance {x:Type viewModels:ImageWindowViewModel}}">
    <Window.Resources>
        <local:ImageFileSourceConverter x:Key="Converter" />
    </Window.Resources>
    <Grid>
        <Image Name="_ImageControl_"
               Source="{Binding Path=ImageSource, Converter={StaticResource Converter}}" 
               Stretch="UniformToFill"></Image>
    </Grid>
</Window>
