<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ImageLaka.ViewModels;assembly=ImageLaka.ViewModels"
    xmlns:converters="clr-namespace:ImageLaka.Views.Converters"
    x:Class="ImageLaka.Views.ImageWindow"
    mc:Ignorable="d"
    Title="ImageWindow"
    Top="{Binding Path=Top}"
    Left="{Binding Path=Left}"
    WindowStartupLocation="Manual"
    x:Name="_Window_"
    d:DesignHeight="400" d:DesignWidth="400"
    d:DataContext="{d:DesignInstance {x:Type viewModels:ImageWindowViewModel}}">
    <Window.Resources>
        <converters:BitmapToImageSourceConverter x:Key="MatWriter" />
        <converters:RectangleToStringConverter x:Key="Rect2Str" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="图像" Height="20" Padding="10,0">
                <StackPanel x:Name="_MiddlePanel_" Background="DarkGray">
                    <Image x:Name="_Image_" Stretch="Uniform">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource MatWriter}">
                                <Binding Path="Bitmap"/>
                                <Binding Path="Bitmap"/>
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                </StackPanel>
            </TabItem>
            <TabItem Header="B" Height="20" Padding="10,0">
                <StackPanel Background="CornflowerBlue">
                    <Image />
                </StackPanel>
            </TabItem>
            <TabItem Header="G" Height="20" Padding="10,0">
                <StackPanel Background="MediumSeaGreen">
                    <Image />
                </StackPanel>
            </TabItem>
            <TabItem Header="R" Height="20" Padding="10,0">
                <StackPanel Background="PaleVioletRed">
                    <Image />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StatusBar x:Name="_StatusBar_" Grid.Row="1" Height="26">
            <TextBlock Padding="0" Margin="1,0" Text="{Binding ParentRectangle, Converter={StaticResource Rect2Str}}" />
            <TextBlock Padding="0" Margin="1,0" Text="{Binding ElementName=_Window_,Path=Top }" />
            <TextBlock Padding="0" Margin="1,0" Text="{Binding ElementName=_Window_,Path=Left}" />
        </StatusBar>
    </Grid>
</Window>