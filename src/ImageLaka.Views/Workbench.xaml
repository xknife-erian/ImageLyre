<RibbonWindow x:Class="ImageLaka.Views.Workbench"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              mc:Ignorable="d"
              Title="ImageLaka" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Ribbon Grid.Row="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Visibility="Collapsed"/>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="开始">
                <RibbonGroup>
                    <RibbonButton Label="Button1" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="图像">
                <RibbonGroup>
                    <RibbonButton Label="Button1" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="处理">
                <RibbonGroup>
                    <RibbonButton Label="Button1" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="分析">
                <RibbonGroup>
                    <RibbonButton Label="Button1" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="视图">
                <RibbonGroup>
                    <RibbonButton Label="Button1" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="帮助">
                <RibbonGroup>
                    <RibbonButton Label="Button1" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <StatusBar Grid.Row="2">
            <Label Content="Ready"></Label>
        </StatusBar>
    </Grid>
</RibbonWindow>
