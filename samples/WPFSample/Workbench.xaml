<Window x:Class="WPFSample.Workbench"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ImageLad.UI.Controls;assembly=ImageLad.UI.Controls"
        xmlns:drawing="clr-namespace:ImageLad.UI.Views.Converters.Drawing;assembly=ImageLad.UI.Views"
        xmlns:sub="clr-namespace:WPFSample.Sub"
        Title="Workbench"
        Width="1600"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Icon="\Main.png"
        mc:Ignorable="d">
    <Window.Resources />
    <Border>
        <DockPanel>
            <Border DockPanel.Dock="Top" VerticalAlignment="Center">
                <Menu Height="24" Padding="0,5,0,0">
                    <MenuItem Header="File"></MenuItem>
                    <MenuItem Header="Help"></MenuItem>
                </Menu>
            </Border>
            <Border DockPanel.Dock="Bottom" Height="30" >
                <DockPanel VerticalAlignment="Center">
                    <TextBlock DockPanel.Dock="Left" Text="Success"></TextBlock>
                </DockPanel>
            </Border>
            <TabControl>
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Height" Value="40"></Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="HistogramSample">
                    <Border>
                        <sub:HistogramSample />
                    </Border>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Border>
</Window>